
@{
    ViewBag.Title = "广告管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int pageCount = 1;
}
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/dataTables.responsive.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    广告列表
                </div>
                <div class="row" style="padding:15px;">
                    <div class="col-sm-6 pan">
                        <div class="dt-buttons btn-group">
                            <a class="btn btn-default buttons-copy buttons-html5 btn-primary" href="/Ads/AdsEidt"><span>新增</span></a>

                            <a class="btn btn-default buttons-collection buttons-colvis btn-success" href="javascript:location.reload()"><span>刷新</span></a>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div id="example_filter" class="dataTables_filter">
                            <label>搜索:<input id="searchInfo" type="search" class="form-control input-sm" placeholder="" aria-controls="example"></label>
                            <button class="btn btn-default" type="button" onclick="searchGo()">查找</button>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>标题</th>
                                <th>链接</th>
                                <th>位置</th>
                                <th>审核</th>
                                <th class="col-sm-2">操作</th>
                            </tr>
                        </thead>
                        <tbody id="tbody"></tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>

                <div class="row" style="padding:15px;padding-top:0px;">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">
                            @Html.Raw(string.Format("每页 {0} 行，当前第 <span id='pageNum'>{2}</span> 页，总 {1} 页", 15, pageCount, 1))
                            <p class="text-danger">删除数据后会自动跳到当前数据页</p>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                            <a class="btn btn-default col-sm-3" id="previousPage">上一页</a>
                            <a class="btn btn-default col-sm-3" id="nextPage">下一页</a>
                            <div>
                                <div class="input-group">
                                    <input type="number" class="form-control" placeholder="跳转..." id="jumpInput">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" id="jumpA">Go!</button>
                                    </span>
                                </div><!-- /input-group -->
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
<link href="~/layer/mobile/need/layer.css" rel="stylesheet" />
<script src="~/layer/mobile/layer.js"></script>
<script src="~/layer/layer.js"></script>
<script src="~/Scripts/JumpJs.js"></script>
<script>
    var htmlCopy = "<tr class='gradeA'><td>[id]</td><td>[title]</td><td>[linkurl]</td><td class='center'>[area]</td><td class='center'>[stata]</td><td ><a class='btn btn-default buttons-html5 btn-warning' href='/Ads/AdsEidt?isAdd=false&id=[id]'><span>编辑</span></a><a class='btn btn-default buttons-html5 btn-danger' href='javascript:Jump.GoDelete([id])'><span>删除</span></a></td></tr>";

        GetData();
        function GetData() {
            layer.load(0, {
                shade: [0.1, '#fff']
            });

            Jump.nowPage = 0;
            Jump.Url = "/Ads/AdsList";
            Jump.DeleteUrl = "/Ads/Delete";
            Jump.ReplaceArray = ["id", "title", "linkurl", "area", "stata", "id", "id"];

            $.ajax({
                url: Jump.Url,
                type: "post",
            }).done(function (data) {
               Jump.ShowHtml(data);
            })
        }

        var hasData = true;
        Jump.hasData = hasData;
        $("#jumpA").click(function () {
            Jump.Jump($("#jumpInput").val());
        });
        $("#nextPage").click(function () {
            Jump.Next();
        });
        $("#previousPage").click(function () {
            Jump.Previous();
        });
</script>